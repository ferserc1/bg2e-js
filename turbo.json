{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "bg2e-js": {
            "dependsOn": ["^build"],
            "inputs": ["src/**", "!dist/**"],
            "outputs": ["dist/**"]
        },
        "build": {
            "dependsOn": ["bg2e-js", "^build"],
            "inputs": ["src/**", "!dist/**"],
            "outputs": ["dist/**"]
        },
        "dev": {
            "dependsOn": ["build"],
            "persistent": true,
            "cache": false
        }
    }
}